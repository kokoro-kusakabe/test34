<% @user ||= current_user %>
<div class="stats" >
  <a href="<%= following_user_path(@user) %>", class="text-reset text-decoration-none">
    <strong id="following" class="stat">
      <%= @user.followings.count %>
    </strong>
    following/
  </a>
  <a href="<%= followers_user_path(@user) %>", class="text-reset text-decoration-none">
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    followers
  </a>
</div>