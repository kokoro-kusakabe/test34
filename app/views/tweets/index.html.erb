<%= render "shared/header" %>

<main>
  <section class="py-5 text-center container">
    <div class="row py-lg-5">
        <p class="font-weight-light">記事を発信しよう</p>
        <p class="lead text-muted">あなただけの記事を書いてみよう</p>
        <h1>
          <%= link_to "新規投稿", new_tweet_path, class: "text-reset text-decoration-none" %>
        </h1>
      </div>
    </div>
  </section>

<h1 class="text-center rounded-pill bg-white border border-primary ">↓↓最近の投稿(６件)↓↓</h1>

  <div class="album py-5 bg-light">
    <div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    <% @tweet.each do |tweet| %>
    <%= link_to tweet_path(tweet[:id]), class: "text-reset text-decoration-none" do %>
    <div class="col">
          <div>
            <svg class="display-block"><%= image_tag tweet.image %><rect width="100%" height="100%" fill="#55595c"/></svg>
          </div>
          <div class="card-body d-flex justify-content-center">
              <p class="card-text"><%= tweet.title %></p>
        </div>
    </div>
    <% end %>
    <% end %>
    </div>
    </div>
  </div>

<h1 class="text-center rounded-pill bg-white border border-primary " >↓↓ランキング上位３作品↓↓</h1>

  <div class="album py-5 bg-light">
    <div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    <% @tweets.each do |tweet| %>
    <%= link_to tweet_path(tweet[:id]), class: "text-reset text-decoration-none" do %>
    <div class="col">
          <div>
            <svg class="display-block"><%= image_tag tweet.image %><rect width="100%" height="100%" fill="#55595c"/></svg>
          </div>
          <div class="card-body d-flex justify-content-center">
          <ul>
              <li class="card-text"><%= tweet.title %></li>
              <li class="card-text">  いいね数<%= tweet.likes.count %></li>
          </ul>
        </div>
    </div>
    <% end %>
    <% end %>
    </div>
    </div>
  </div>

</main>

<%= render "shared/footer" %>